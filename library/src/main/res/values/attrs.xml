<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MultiImageView">
        <attr name="miv_singleImgSize" format="dimension"/>
        <attr name="miv_imgGap" format="dimension"/>
        <attr name="miv_maxSize" format="integer"/>
        <attr name="miv_isShowText" format="boolean"/>
        <attr name="miv_scaleType" format="enum">
            <enum name="matrix" value="0"/>
            <enum name="fitXY" value="1"/>
            <enum name="fitStart" value="2"/>
            <enum name="fitCenter" value="3"/>
            <enum name="fitEnd" value="4"/>
            <enum name="center" value="5"/>
            <enum name="centerCrop" value="6"/>
            <enum name="centerInside" value="7"/>
        </attr>
    </declare-styleable>
</resources>